<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lilsmile.borderonlineproductionedition.app" >
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".SettingsActivity"
            android:label="@string/title_activity_settings" >
        </activity>
        <activity
            android:name=".CameraShow"
            android:label="@string/title_activity_camera_show" >
        </activity>
        <activity
            android:name=".Borders"
            android:label="@string/title_activity_borders"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".Transits"
            android:label="@string/title_activity_transits" >
        </activity>
        <activity
            android:name=".TransitInfo"
            android:label="@string/title_activity_transit_info" >
        </activity>
        <activity
            android:name=".Chat"
            android:label="@string/title_activity_chat" >
        </activity>
    </application>

</manifest>
