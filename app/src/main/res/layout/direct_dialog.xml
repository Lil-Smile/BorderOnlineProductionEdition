<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="@dimen/dialogSize"
              android:layout_height="@dimen/dialogSize">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/chooseDirection"
            android:id="@+id/textView4" android:layout_gravity="center"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:id="@+id/llForward"
            android:layout_height="wrap_content" android:layout_gravity="center" android:gravity="center_horizontal"
            android:background="@drawable/dialog_element" android:layout_marginTop="10dp" android:paddingRight="10dp"
            android:paddingLeft="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:layout_margin="@dimen/dialogViewsMargin"
                android:id="@+id/textViewForwardFrom"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="->"
                android:id="@+id/textView2" android:layout_gravity="center_vertical"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:layout_margin="@dimen/dialogViewsMargin"
                android:id="@+id/textViewForwardTo"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:id="@+id/llBackward"
            android:layout_height="wrap_content" android:layout_gravity="center" android:gravity="center_horizontal"
            android:background="@drawable/dialog_element" android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp" android:paddingLeft="10dp" android:paddingRight="10dp">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:layout_margin="@dimen/dialogViewsMargin"
                android:id="@+id/textViewBackwardFrom"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="->"
                android:id="@+id/textView3" android:layout_gravity="center_vertical"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:layout_margin="@dimen/dialogViewsMargin"
                android:id="@+id/textViewBackwardTo"/>
    </LinearLayout>
</LinearLayout>